# =========================
# DATABASE CONFIGURATION
# =========================
DATABASE_URL=postgresql://user:password@localhost:5432/medai_db

# =========================
# SECURITY
# =========================
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# =========================
# AI MODEL CONFIGURATION
# =========================
MEDGEMMA_MODEL_ID=google/medgemma-4b-it
MEDGEMMA_DEVICE=cuda

# Model inference settings
MODEL_MAX_LENGTH=512
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.9
MODEL_TOP_K=50

# =========================
# FILE UPLOAD
# =========================
UPLOAD_DIR=./static/uploads
MAX_FILE_SIZE=52428800

# Allowed file types
ALLOWED_IMAGE_TYPES=.dicom,.dcm,.png,.jpg,.jpeg,.tiff
ALLOWED_AUDIO_TYPES=.wav,.mp3,.m4a,.ogg

# =========================
# LOGGING
# =========================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=json

# =========================
# API CONFIGURATION
# =========================
API_TITLE=MedAI Assistant
API_VERSION=0.1.0
API_DESCRIPTION=Medical AI Diagnostic System
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# =========================
# CORS
# =========================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =========================
# DEVELOPMENT
# =========================
DEBUG=True
TESTING=False
RELOAD=True
